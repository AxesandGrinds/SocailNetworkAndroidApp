<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/placeholderboy"
                    android:id="@+id/iv_wall_post_user_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_wall_post_user_name"
                    android:text="Loading..."
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/iv_wall_post_user_image"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello world!"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:id="@+id/tv_wall_post_message"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/imageloading"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                android:id="@+id/iv_wall_post_item_post_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Liked by: 10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:src="@drawable/ic_thumb_up_black_24dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="50"
                    android:src="@drawable/ic_comment_black_24dp"/>

            </LinearLayout>

        </LinearLayout>
        
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>